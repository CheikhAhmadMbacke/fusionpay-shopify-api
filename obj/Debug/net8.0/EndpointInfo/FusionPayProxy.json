      }
    },
    "/api/Webhook/fusionpay": {
      "post": {
        "tags": [
          "Webhook"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Webhook/test": {
      "get": {
        "tags": [
          "Webhook"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PaymentRequest": {
        "required": [
          "amount",
          "customerName",
          "customerPhone",
          "orderId"
        ],
        "type": "object",
        "properties": {
          "orderId": {
            "maxLength": 50,
            "minLength": 3,
            "type": "string"
          },
          "orderNumber": {
            "maxLength": 20,
            "minLength": 0,
            "type": "string",
            "nullable": true
          },
          "customerPhone": {
            "minLength": 1,
            "pattern": "^[0-9]{8,15}$",
            "type": "string",
            "format": "tel"
          },
          "customerName": {
            "maxLength": 100,
            "minLength": 2,
            "type": "string"
          },
          "amount": {
            "maximum": 1000000,
            "minimum": 201,
            "type": "number",
            "format": "double"
          },
          "customerEmail": {
            "type": "string",
            "format": "email",
            "nullable": true
          },
          "articles": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ShopifyArticle"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ShopifyArticle": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      }
    }
  }
}
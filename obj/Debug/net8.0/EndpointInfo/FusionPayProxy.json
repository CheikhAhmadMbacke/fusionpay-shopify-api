{
  "openapi": "3.0.1",
  "info": {
    "title": "FusionPay Proxy API",
    "description": "API proxy for FusionPay payments integration with Shopify",
    "version": "1.0"
  },
  "paths": {
    "/": {
      "get": {
        "tags": [
          "FusionPayProxy"
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "tags": [
          "FusionPayProxy"
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StringDateTime<>f__AnonymousType16"
                }
              }
            }
          }
        }
      }
    },
    "/api/Payment/initiate": {
      "post": {
        "tags": [
          "Payment"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Payment/verify/{token}": {
      "get": {
        "tags": [
          "Payment"
        ],
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Payment/transactions/pending": {
      "get": {
        "tags": [
          "Payment"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Payment/health": {
      "get": {
        "tags": [
          "Payment"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Webhook/fusionpay": {
      "post": {
        "tags": [
          "Webhook"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Webhook/test": {
      "get": {
        "tags": [
          "Webhook"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "OrderItem": {
        "type": "object",
        "properties": {
          "Name": {
            "type": "string",
            "nullable": true
          },
          "Price": {
            "type": "number",
            "format": "double"
          },
          "Quantity": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "PaymentRequest": {
        "required": [
          "Amount",
          "CustomerName",
          "CustomerPhone",
          "OrderId",
          "ReturnUrl"
        ],
        "type": "object",
        "properties": {
          "Amount": {
            "maximum": 10000000,
            "minimum": 1,
            "type": "number",
            "format": "double"
          },
          "CustomerPhone": {
            "minLength": 1,
            "type": "string",
            "format": "tel"
          },
          "CustomerName": {
            "minLength": 2,
            "type": "string"
          },
          "OrderId": {
            "minLength": 1,
            "type": "string"
          },
          "OrderNumber": {
            "type": "string",
            "nullable": true
          },
          "ReturnUrl": {
            "minLength": 1,
            "type": "string",
            "format": "uri"
          },
          "ProductName": {
            "type": "string",
            "nullable": true
          },
          "Items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderItem"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "StringDateTime<>f__AnonymousType16": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "nullable": true
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      }
    }
  }
}